<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="50dp"
    android:layout_width="50dp">
    <TextView
        android:id="@+id/daily_day_week_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUN"
        android:textSize="13dp"
        android:textAlignment="center"
        android:layout_marginBottom="1dp"
        android:textColor="@color/inactiveDate"
        app:layout_constraintBottom_toTopOf="@+id/daily_day_month_frame_view"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/daily_day_month_frame_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="1:1">
        <TextView
            android:id="@+id/daily_day_month_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31"
            android:textAlignment="center"
            android:textColor="@color/inactiveDate"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>